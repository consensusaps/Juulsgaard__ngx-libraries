{
  "name": "@juulsgaard/ngx-tools",
  "description": "Basic utilities for working with Angular",
  "version": "18.0.2",
  "repository": "git@github.com:Juulsgaard/ngx-libraries.git",
  "homepage": "https://github.com/Juulsgaard/ngx-libraries/tree/main/projects/ngx-tools",
  "publishConfig": {
    "directory": "../../dist/ngx-tools"
  },
  "main": "src/public-api.ts",
  "type": "module",
  "exports": {
    ".": {
      "sass": "./styles/index.scss"
    },
    "./theme": {
      "sass": "./theme/index.scss"
    },
    "./theme/light-theme": {
      "sass": "./theme/light-theme.scss"
    },
    "./theme/dark-theme": {
      "sass": "./theme/dark-theme.scss"
    },
    "./styles": {
      "sass": "./styles/index.scss"
    },
    "./styles/variables": {
      "sass": "./styles/variables.scss"
    },
    "./styles/reset": {
      "sass": "./styles/reset.scss"
    }
  },
  "scripts": {
    "build": "ng build ngx-tools",
    "prepublish": "ng build ngx-tools",
    "publish": "cd ../../dist/ngx-tools && npm publish",
    "storybook": "ng run ngx-tools:storybook"
  },
  "peerDependencies": {
    "@angular/common": "^18.1.2",
    "@angular/core": "^18.1.2",
    "@angular/animations": "^18.1.2",
    "@ctrl/tinycolor": "^4.1.0",
    "@juulsgaard/rxjs-tools": "^1.7.4",
    "typescript": "~5.5.4"
  },
  "devDependencies": {
    "@angular/common": "18.1.2",
    "@angular/core": "18.1.2",
    "@angular/animations": "18.1.2",
    "@ctrl/tinycolor": "4.1.0",
    "@juulsgaard/rxjs-tools": "1.7.4"
  },
  "dependencies": {
    "tslib": "2.6.3"
  }
}
